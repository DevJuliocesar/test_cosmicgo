<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <div class="container">
    <h2>Database Results</h2>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Telefono</th>
          <th>Cumplea√±os</th>
          <th>Estado</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach(function(user){ %>
        <tr>
          <td><%- user.id %></td>
          <td><%- user.name %></td>
          <td><%- user.email %></td>
          <td><%- user.phone %></td>
          <td><%- user.birthday %></td>
          <td><%- user.status %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

  </div>

</body>
